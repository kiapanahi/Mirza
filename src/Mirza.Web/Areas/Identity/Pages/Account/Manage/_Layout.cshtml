@inject SignInManager<MirzaUser> SignInManager;
@{
    Layout = "/Pages/Shared/_Layout.cshtml";
    ViewData["Title"] = $"مدیریت پروفایل - {ViewData["Subtitle"]}";
    var hasExternalLogins = (await SignInManager.GetExternalAuthenticationSchemesAsync()).Any();
}

<div>
    <div class="row">
        <div class="col">
            <nav class="navbar navbar-expand-lg bg-info">
                <div class="container">
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-bar navbar-kebab"></span>
                        <span class="navbar-toggler-bar navbar-kebab"></span>
                        <span class="navbar-toggler-bar navbar-kebab"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarNavDropdown">
                        <ul class="navbar-nav">
                            <li class="nav-item">
                                <a class="nav-link @ManageNavPages.IndexNavClass(ViewContext)"
                                   id="profile" asp-page="./Index">
                                    پروفایل
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link @ManageNavPages.ChangePasswordNavClass(ViewContext)"
                                   id="change-password" asp-page="./ChangePassword">
                                    کلمه عبور
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link @ManageNavPages.AccessKeyNavClass(ViewContext)"
                                   id="access-key" asp-page="./AccessKey">
                                    کلید‌های دسترسی
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
        </div>
    </div>
    <div class="row">
        <div class="col">
            @RenderBody()
        </div>
    </div>
</div>

@section Scripts {
    @RenderSection("Scripts", false)
}